<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/clPlainBody"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragment.PlainBodyFragment">

	<TextView
		android:id="@+id/tvQuestionBody"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:text="@string/loading"
		android:textAlignment="center"
		android:textColor="?colorForeground"
		android:textSize="36sp"
		app:autoSizeMaxTextSize="36dp"
		app:autoSizeMinTextSize="8dp"
		app:autoSizeStepGranularity="2dp"
		app:autoSizeTextType="uniform"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<ImageView
		android:id="@+id/ivImageEmbed"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginBottom="10dp"
		android:adjustViewBounds="true"
		android:background="?attr/colorForeground"
		android:scaleType="fitCenter"
		android:src="@drawable/qwiz_placeholder"
		app:layout_constraintBottom_toTopOf="@+id/tvQuestionBody"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>